<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/newRat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onNewRatPressed"
        android:text="New Rat" />

    <Button
        android:id="@+id/viewRats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onViewRatPressed"
        android:text="View Rats" />

    <Button
        android:id="@+id/viewStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onViewStatsPressed"
        android:text="View Statistics" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLogoutPressed"
        android:text="Log Out" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSettingsPressed"
        android:text="Settings" />
</LinearLayout>